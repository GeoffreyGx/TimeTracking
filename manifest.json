{
	"manifest_version": 3,
	"name": "TimeTracking",

	"action": {
		"default_title": "TimeTracking",
		"default_popup": "popup/popup.html"
	},

	"version": "1.0.0",

	"description": "A website time tracking extension",

	"permissions": [
		"scripting",
		"storage",
		"favicon"
	],

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["timer.js"]
		}
	],

	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png",
		"512": "icons/icon512.png"
	}
}
